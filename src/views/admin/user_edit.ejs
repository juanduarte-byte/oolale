<div class="login-centered">
    <div class="kpi-card" style="max-width: 500px; width: 100%;">
        <div style="margin-bottom: 2rem;">
            <h2 style="font-size: 1.5rem; margin-bottom: 0.5rem; color: #fff;">Editar Usuario</h2>
            <p style="color: var(--text-muted); font-size: 0.9rem;">Modificando datos de #<%= editUser.id %>
            </p>
        </div>

        <form action="/admin/users/edit/<%= editUser.id %>" method="POST">
            <div style="margin-bottom: 1.5rem;">
                <label style="color: var(--text-muted); display: block; margin-bottom: 0.5rem;">Nombre Artístico</label>
                <input type="text" name="nombre_artistico" value="<%= editUser.nombre_artistico %>" required
                    style="width: 100%; padding: 12px; background: #000; border: 1px solid var(--border); border-radius: 8px; color: #fff; outline: none;">
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="color: var(--text-muted); display: block; margin-bottom: 0.5rem;">Correo
                    Electrónico</label>
                <input type="email" name="email" value="<%= editUser.email %>" required
                    style="width: 100%; padding: 12px; background: #000; border: 1px solid var(--border); border-radius: 8px; color: #fff; outline: none;">
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="color: var(--text-muted); display: block; margin-bottom: 0.5rem;">Ranking</label>
                <select name="ranking_tipo"
                    style="width: 100%; padding: 12px; background: #000; border: 1px solid var(--border); border-radius: 8px; color: #fff; outline: none;">
                    <option value="regular" <%=editUser.ranking_tipo==='regular' ? 'selected' : '' %>>Regular</option>
                    <option value="pro" <%=editUser.ranking_tipo==='pro' ? 'selected' : '' %>>Pro</option>
                    <option value="rockstar" <%=editUser.ranking_tipo==='rockstar' ? 'selected' : '' %>>Rockstar
                    </option>
                </select>
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="color: var(--text-muted); display: block; margin-bottom: 0.5rem;">Rol Principal</label>
                <select name="rol_principal"
                    style="width: 100%; padding: 12px; background: #000; border: 1px solid var(--border); border-radius: 8px; color: #fff; outline: none;">
                    <option value="musico" <%=editUser.rol_principal==='musico' ? 'selected' : '' %>>Músico</option>
                    <option value="organizador" <%=editUser.rol_principal==='organizador' ? 'selected' : '' %>>Organizador</option>
                    <option value="productor" <%=editUser.rol_principal==='productor' ? 'selected' : '' %>>Productor</option>
                </select>
            </div>

            <div style="display: flex; gap: 10px; justify-content: flex-end;">
                <a href="/admin/users" class="btn"
                    style="background: rgba(255,255,255,0.1); color: #fff; text-decoration: none;">Cancelar</a>
                <button type="submit" class="btn btn-primary" style="padding: 12px 24px;">Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>