<div class="login-centered">
    <div class="kpi-card" style="max-width: 500px; width: 100%;">
        <div style="margin-bottom: 2rem;">
            <h2 style="font-size: 1.5rem; margin-bottom: 0.5rem; color: #fff;">Crear Nuevo Perfil</h2>
            <p style="color: var(--text-muted); font-size: 0.9rem;">Registrar manualmente un músico.</p>
        </div>

        <form action="/admin/users/create" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div style="margin-bottom: 1.5rem;">
                <label style="color: var(--text-muted); display: block; margin-bottom: 0.5rem;">Nombre Artístico</label>
                <input type="text" name="nombre_artistico" required
                    style="width: 100%; padding: 12px; background: #000; border: 1px solid var(--border); border-radius: 8px; color: #fff; outline: none;">
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="color: var(--text-muted); display: block; margin-bottom: 0.5rem;">Correo
                    Electrónico</label>
                <input type="email" name="email" required
                    style="width: 100%; padding: 12px; background: #000; border: 1px solid var(--border); border-radius: 8px; color: #fff; outline: none;">
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label style="color: var(--text-muted); display: block; margin-bottom: 0.5rem;">Rol Principal</label>
                <select name="rol_principal"
                    style="width: 100%; padding: 12px; background: #000; border: 1px solid var(--border); border-radius: 8px; color: #fff; outline: none;">
                    <option value="musico">Músico</option>
                    <option value="organizador">Organizador</option>
                    <option value="productor">Productor</option>
                </select>
            </div>

            <div style="margin-bottom: 2rem;">
                <label style="color: var(--text-muted); display: block; margin-bottom: 0.5rem;">Ubicación</label>
                <input type="text" name="ubicacion"
                    style="width: 100%; padding: 12px; background: #000; border: 1px solid var(--border); border-radius: 8px; color: #fff; outline: none;">
            </div>

            <div style="display: flex; gap: 10px; justify-content: flex-end;">
                <a href="/admin/users" class="btn"
                    style="background: rgba(255,255,255,0.1); color: #fff; text-decoration: none;">Cancelar</a>
                <button type="submit" class="btn btn-primary" style="padding: 12px 24px;">Crear Perfil</button>
            </div>
        </form>
    </div>
</div>