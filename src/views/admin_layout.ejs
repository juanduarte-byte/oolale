                    </li>
                    <li class="nav-item">
                        <a href="/admin/profiles"
                            class="nav-link <%= typeof title != 'undefined' && title.includes('Perfiles') ? 'active' : '' %>">
                            <i class="bi bi-person-badge"></i> Perfiles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/connections"
                            class="nav-link <%= typeof title != 'undefined' && title.includes('Conexiones') ? 'active' : '' %>">
                            <i class="bi bi-diagram-2"></i> Conexiones
                        </a>
                    </li>

                    <!-- C. Moderación -->
                    <small class="nav-header">MODERACIÓN</small>
                    <li class="nav-item">
                        <a href="/admin/reports"
                            class="nav-link <%= typeof title != 'undefined' && title.includes('Reportes') ? 'active' : '' %>">
                            <i class="bi bi-flag-fill" style="color: var(--danger);"></i> Reportes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/messages"
                            class="nav-link <%= typeof title != 'undefined' && title.includes('Mensajes') ? 'active' : '' %>">
                            <i class="bi bi-chat-dots"></i> Mensajes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/samples"
                            class="nav-link <%= typeof title != 'undefined' && title.includes('Muestras') ? 'active' : '' %>">
                            <i class="bi bi-images"></i> Muestras
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/references"
                            class="nav-link <%= typeof title != 'undefined' && title.includes('Referencias') ? 'active' : '' %>">
                            <i class="bi bi-star-half"></i> Referencias
                        </a>
                    </li>

                    <!-- D. Contenido -->
                    <small class="nav-header">CONTENIDO</small>
                    <li class="nav-item">
                        <a href="/admin/events"
                            class="nav-link <%= typeof title != 'undefined' && title.includes('Eventos') ? 'active' : '' %>">
                            <i class="bi bi-calendar-event"></i> Eventos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/genres"
                            class="nav-link <%= typeof title != 'undefined' && title.includes('Géneros') ? 'active' : '' %>">
                            <i class="bi bi-music-note-beamed"></i> Géneros
