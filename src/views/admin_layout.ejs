                    <li class="nav-item">
                        <a href="/admin/notes"
                            class="nav-link <%= typeof title != 'undefined' && title.includes('Notas') ? 'active' : '' %>">
                            <i class="bi bi-sticky"></i> Notas Admin
                        </a>
                    </li>
                    <li class="nav-item">
